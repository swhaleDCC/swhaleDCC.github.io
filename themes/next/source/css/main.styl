// CSS Style Guide: http://codeguide.co/#css


$scheme    = hexo-config('scheme') ? hexo-config('scheme') : 'Muse';

$variables = base $scheme;
$mixins    = base $scheme;


// Variables Layer
// --------------------------------------------------
for $variable in $variables
  @import "_variables/" + $variable;
for $inject_variable in hexo-config('injects.variable')
  @import "../../../../" + $inject_variable;

// Mixins Layer
// --------------------------------------------------
for $mixin in $mixins
  @import "_mixins/" + $mixin;
for $inject_mixin in hexo-config('injects.mixin')
  @import "../../../../" + $inject_mixin;

// Common Layer
// --------------------------------------------------

// Scaffolding
@import "_common/scaffolding";

// Layout
@import "_common/outline";

// Components
@import "_common/components";


// Schemes Layer
// --------------------------------------------------
@import "_schemes/" + $scheme;


// Custom Layer
// --------------------------------------------------
for $inject_style in hexo-config('injects.style')
  @import "../../../../" + $inject_style;

// 添加背景图片
body {
  background: url(/images/bg2.jpg);
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: 50% 50%;
  
}

// 修改主体透明度
.main-inner {
  background: rgba(255, 255, 255 ,1);
  //opacity: 0;
  width: 75% !important;
  border:2px solid rgba(0, 0, 0 ,0);
  border-radius:50px;
}

// 修改菜单栏透明度
.header-inner {
  opacity: 1;
}
// 主页文章添加阴影效果
.post {
   background: #fff;
   opacity: 1;
   margin:0px 40px 10px 40px;
   text-align: center;
   padding: 2%;
   border:2px solid rgba(0, 0, 0 ,0.5);
   border-radius:50px;
}